public class Solution {
    public void sortColors(int[] nums) {
        int index0=0,index2=nums.length-1,i=0;
        while(i<=index2)
        {
            if(nums[i]==0)
            {
                nums[i]=nums[index0];
                nums[index0]=0;
                index0++;
            }
            if(nums[i]==2)
            {
                nums[i]=nums[index2];
                nums[index2]=2;
                index2--;
                i--;
            }
            ++i;
        }
    }
}
